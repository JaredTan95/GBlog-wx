@import "/app.wxss";
/* 文章样式 */
.cu-card {
	display: block;
	overflow: hidden;
}
.cu-card>.cu-item {
	display: block;
	background-color: var(--white);
	overflow: hidden;
	border-radius: 10rpx;
	margin: 20rpx;
}
.cu-card.article>.cu-item .content>image {
	width: 180rpx;
	height: 4.8em;
	margin-right: 20rpx;
	border-radius: 6rpx;
}
.cu-card.article>.cu-item .content .text-content {
	width: 400rpx;
	font-size: 22rpx;
	color: #888;
	height: 4.4em;
	overflow: hidden;
}
.cu-card.article>.cu-item .title {
	font-size: 30rpx;
	font-weight: 900;
	color: var(--black);
	line-height: 100rpx;
	padding: 0 30rpx;
}